<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="../../css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container" style="background: lightgrey">
        <ul class="nav nav-pills">
            <li>@Html.ActionLink("Main","Index","Home")</li>
            @if (User.Identity.Name == "")
            {
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
            }
            else
            {
                <li>@Html.ActionLink(@User.Identity.Name,"index","Profile")</li>
                <li>@Html.ActionLink("Logout", "LogOut", "Account")</li>
            }
        </ul>
    </div>
    <hr/>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2" style="background: lightgrey">
                <ul class="nav nav-pills nav-stacked" id="mytabs">
                    <li class="disabled"><a>CATEGORIES</a></li>
                    <li>@Html.ActionLink("Top Rated",  "Index", "Home")</li>
                    <li>@Html.ActionLink("Pictures",  "ImageView", "Home")</li>
                    <li>@Html.ActionLink("Documents",  "DocumentsView", "Home")</li>
                    <li>@Html.ActionLink("Music", "MusicView", "Home")</li>
                </ul>
            </div>
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>


        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
        <script src="../../js/bootstrap.min.js"></script>
</body>
</html>
